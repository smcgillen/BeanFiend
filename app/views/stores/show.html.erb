<h1>	<%= @store.name %> </h1>
<h2><%= @store.address %> </h2>
<%= gmaps4rails(@json) %>
<h3> Reviews: </h3>
<% if @store.reviews %>
	<%= render partial: '/reviews/review', collection: @store.reviews %>
<% else %>
<h4> None Yet </h4>
<% end %>

<% if current_user %>
	<%= link_to "Write a Review", new_review_path(store_id: @store.id) %>
<% else %>
	<%= link_to "Sign up to write a Review", new_user_registration_path %>
<% end %>