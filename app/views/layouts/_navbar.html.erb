<div class="navbar">
      <div class = "logo"><%= link_to image_tag("Bean_Fiend_logo.png"), root_url %></div>

      <div class="navbar-inner">
        <ul class="nav">
            <li><%= link_to "Coffee", stores_path%></li>
            <% if current_user %>
                  <li><%= link_to "Profile", user_path(id: current_user.id)%></li>
                  <li class = "dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                             <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                             <li><%= link_to "Edit Account", edit_user_registration_path %> </li>
                        </ul>
                  </li>
            <% else %>
                  <li><%= link_to "Sign In", new_user_session_path %></li>
                  <li><%= link_to "Sign Up", new_user_registration_path %></li>
            <% end %>
      </ul>
      <% if current_user %>
              <div class = "logged_in">Logged in as <%=current_user.name%></div>
      <% end %>
      </div>
</div>